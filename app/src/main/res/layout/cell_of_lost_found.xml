<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlContentBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:background="@color/colorWhite"
        android:paddingTop="@dimen/_4sdp">


        <LinearLayout
            android:id="@+id/llNameStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_6sdp"
            android:paddingEnd="@dimen/_8sdp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10ssp"
                android:gravity="center"
                android:background="@drawable/ic_bg_circle_found"
                android:text="F"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="Lost Found Item Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:id="@+id/viewLine1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/llNameStatus"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/colorLightGray"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewLine1"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_8sdp"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/tvMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:drawablePadding="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:text="XXXXXXXXX"
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:id="@+id/llDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMobileNo"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDateTime"
            android:layout_marginEnd="@dimen/_4sdp"
            android:gravity="center_vertical|end"
            android:text="2020-03-14 11:00:00"
            android:visibility="gone" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@+id/tvTimeStamp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/colorGreen" />
    </RelativeLayout>


</RelativeLayout>