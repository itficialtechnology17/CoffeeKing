<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <RelativeLayout
            android:id="@+id/rlContentBG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@color/color3"
            android:elevation="@dimen/_2sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:textStyle="bold"
                    android:text="Here you have to display issue"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tvResponsible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Nens + Sabbir"
                    android:paddingStart="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlContentBG"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solution"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tvSolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:paddingStart="@dimen/_4sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="nbdvcdbjdbvkjdbjvdv" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-03-13 08:02:12"
                android:textSize="@dimen/_10ssp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_gravity="right"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>